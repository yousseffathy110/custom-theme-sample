<section class="special container">
	<div class="text">NIKE</div>
	<div class="landingfooter"></div>
	<img src="{{ settings.img1 }}" alt="" class="right">
	<img src="{{ settings.img2 }}" alt="" class="left">
</section>

<style>
	.special {
		background: linear-gradient(90deg, #BED754 0%, #FF965A 100%);
		height: 552.49px;
		margin-bottom: 55px;
		border-radius: 20px;
		position: relative;
		overflow: hidden;
	}
	.text {
		position: absolute;
		right: 50%;
		bottom: 55%;
		opacity: 0.4;
		color: white;
		font-weight: 900;
		font-size: 35em;
		text-transform: capitalize;
		letter-spacing: 15px;
		transform: translate(50%, 50%) translateX(100%);
		transition: transform 1.5s ease;
	}
	.text.visible {
		transform: translate(50%, 50%) translateX(0);
	}
	.landingfooter {
		background: #750E21;
		position: absolute;
		bottom: 0;
		left: 117%;
		right: 0;
		height: 50px;
		border-bottom-left-radius: 20px;
		border-bottom-right-radius: 20px;
		width: 100%;
		transform: translateX(-100%);
		transition: transform 1.5s ease;
	}
	.landingfooter.visible {
		transform: translateX(0);
	}
	.right,
	.left {
		position: absolute;
		top: 18px;
		transition: transform 1.5s ease;
	}
	.right {
		right: 52px;
		transform: translateX(100%); /* Start off-screen to the right */
	}
	.right.visible {
		transform: translateX(0); /* Slide into position */
	}
	.left {
		left: 9%;
		transform: translateX(-100%); /* Start off-screen to the left */
	}
	.left.visible {
		transform: translateX(0); /* Slide into position */
	}
	@media(max-width: 767px) {
		.special {
			height: 296.84px;
			border-radius: 0;
		}
		.text {
			font-size: 16em;
			padding-left: 38px;
			letter-spacing: 45px;
		}		
		.landingfooter {
			border-radius: 0;
		}
	}
	@media (max-width: 450px) {
		.text {
			font-size: 14em;
		}
	}
	@media(min-width: 345px) {
		.right {
			right: 2%;
			top: 18%;
			width: 251.81px;
			height: 179.21px;
		}
		.left {
			left: 0%;
			top: 17%;
			width: 226.81px;
			height: 142.21px;
		}
	}
	@media(min-width: 420px) {
		.right {
			right: 3%;
			top: 10%;
			width: 294.81px;
			height: 218.21px;
		}
		.left {
			left: -4%;
			top: 13%;
			width: 256.81px;
			height: 166.21px;
		}
	}
	@media(min-width: 490px) {
		.right {
			right: 16%;
			top: 11%;
			width: 269.81px;
			height: 204.21px;
		}
		.left {
			left: 14%;
			top: 12%;
			width: 245.81px;
			height: 160.21px;
		}
	}
	@media (min-width:765px) {
		.left {
			left: 7%;
