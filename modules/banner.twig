		}
	}
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const landingfooter = document.querySelector('.landingfooter');
        const text = document.querySelector('.text');
        const rightImage = document.querySelector('.right');
        const leftImage = document.querySelector('.left');
        const specialSection = document.querySelector('.special');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    landingfooter.classList.add('visible');
                    text.classList.add('visible');
                    rightImage.classList.add('visible');
                    leftImage.classList.add('visible');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });

        observer.observe(specialSection);
    });
</script>

