<section class="landing">
	<div class="landing-swiper">
		<div class="swiper-wrapper">
			{% for slide in settings.slider_images %}
				<div class="swiper-slide">
					<img class="landing-img" src="{{ slide.img }}" alt="landing slider img {{ loop.index }}">
				</div>
			{% endfor %}
		</div>
		<div class="swiper-pagination"></div>
	</div>
	<div class="wrapper">
		<h1>{{ settings.heading }}</h1>
		<p>{{ settings.text }}</p>
		<a href="/">{{ settings.button_text }}</a>
	</div>
</section>

<style>
	.landing {
		width: 100%;
		color: white;
		text-align: center;
		position: relative;
	}
	.landing .landing-swiper .swiper-slide::after {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(108.62deg, rgba(0, 0, 0, 0.7) 0%, rgba(227, 101, 29, 0.7) 150.6%, rgba(191, 214, 84, 0.7) 150.62%);
		z-index: 1;
	}
	.landing .landing-swiper .landing-img {
		width: 100%;
		height: 100vh;
		object-fit: cover;
		z-index: 0; /* Ensures image is behind the overlay */
		position: relative;
	}
	/* Hide all pagination bullets */
	.swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet,
	.swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
		display: none !important;
	}
	/* Show only the first two bullets */
	.swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet:nth-child(1),
	.swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet:nth-child(2) {
		display: inline-block !important;
	}
	.swiper-pagination-bullet-active{
		background: #eee !important;
	}
	.swiper-pagination-bullet{
		width: 10px !important;
  		height: 10px !important;
		opacity: var(--swiper-pagination-bullet-inactive-opacity, 0.5) !important;
	}
	.landing-swiper {
		overflow-x: hidden;
		width: 100%;
		height: 100vh;
	}

	.swiper {
		width: 100%;
		height: 100%;
	}

	.swiper-slide {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.swiper-slide .landing-img {
		width: 100%;
		height: 100vh;
		object-fit: cover;
	}

	.landing .wrapper {
		width: 90%;
		max-width: 902px;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 2;
		color: white;
	}

	.landing h1 {
		font-size: 42px;
		font-weight: 700;
		line-height: 1.2;
	}

	.landing p {
		font-weight: 500;
		font-size: 20px;
		line-height: 1.2;
		margin-top: 20px;
	}

	.landing a {
		margin-top: 17px;
		display: inline-block;
		padding: 12px 50px;
		background-color: #191919;
		color: white;
		font-size: 1.2rem;
		border-radius: 11px;
		text-decoration: none;
	}

	/* Responsive styling for mobile */
	@media(max-width: 767px) {
		.landing .wrapper {
			width: 90%;
			padding: 10px;
		}

		.landing h1 {
			font-size: 24px;
			line-height: 1.3;
		}

		.landing p {
			font-size: 14px;
			line-height: 1.3;
		}

		.landing a {
			padding: 10px 30px;
			font-size: 1rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const landingSwiper = new Swiper('.landing-swiper', {
			slidesPerView: 1,
			spaceBetween: 0,
			loop: true,
			loopedSlides: 2,
			autoplay: {
				delay: 5000,
				disableOnInteraction: false
			},
			pagination: {
				el: '.landing-swiper .swiper-pagination',
				clickable: true,
				type: 'bullets'
			},
			allowTouchMove: true
		});
	});

</script>


