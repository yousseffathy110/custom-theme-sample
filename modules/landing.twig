<section
	class="landing" style="background: url('{{settings.background_img}}');">
	<!-- Overlay div -->
	<div class="landing-overlay"></div>

	<div class="wrapper">
		<h1>{{settings.heading}}</h1>
		<p>{{settings.text}}</p>
		<a href="/">{{settings.button_text}}</a>
	</div>
</section>

<style>
	.landing {
		height: 100vh;
		width: 100%;
		background-size: cover;
		background-position: center;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		text-align: center;
		position: relative; /* Ensures overlay is positioned within this section */
		padding: 0 25px;
	}

	.landing-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: #8C431AB2; /* Set your preferred color */
		z-index: 1;
		pointer-events: none; /* Prevents interaction with the overlay */
	}

	.landing .wrapper {
		width: 902px;
		position: relative; /* Keeps the wrapper content above the overlay */
		z-index: 2;
	}

	.landing h1 {
		font-size: 42px;
		font-weight: 700;
		line-height: 50.4px;
	}

	.landing p {
		font-weight: 500;
		font-size: 20px;
		line-height: 24px;
		margin-top: 20px;
	}

	.landing a {
		margin-top: 17px;
		display: inline-block;
		padding: 12px 50px;
		background-color: #191919;
		color: white;
		font-size: 1.2rem;
		border-radius: 11px;
	}

	@media(max-width:767px) {
		.landing h1 {
			font-size: 30px;
		}
		.landing p {
			font-size: 15px;
		}
	}
</style>

{% schema %}
{
  "name": {
    "ar": "الصفحه الرئيسيه",
    "en": "landing page"
  },
  "icon": "fal fa-presentation",
  "display": true,
  "settings": {
    "heading": {
      "type": "text",
      "settings_label": {
        "ar": "العنوان",
        "en": "heading"
      }
    },
    "text": {
      "type": "text",
      "label": {
        "ar": "نص السكشن",
        "en": "landingtext"
      }
    },
    "button_text": {
      "type": "text",
      "label": {
        "ar": "نص الزر",
        "en": "button text"
      }
    },
    "background_img": {
      "type": "image",
      "label": {
        "ar": "صوره الخلفيه",
        "en": "background img"
      }
    }
  }
}
{% endschema %}
