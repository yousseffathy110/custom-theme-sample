<div class="footer-companies">
	<div class="container">
		<div class="footer-icons">
			<div class="d-flex flex-row {% if store.apps.ios_app_id or store.apps.android_package_name%}justify-content-between{% else %}justify-content-center{% endif %} align-items-center flex-wrap icons-wrapper footer-store-section-bars">
				{% if store.apps.ios_app_id or store.apps.android_package_name%}
					<div class="icons social-apps-icons d-flex flex-wrap align-items-center">
						<div class="google-app-stores apps-social-icons d-flex justify-content-center">
							{% if store.apps.ios_app_id %}
								<a href="https://apps.apple.com/app/id{{ store.apps.ios_app_id }}" target="_blank">
									<img src="{{ asset_url ~ 'app-store.svg' }}" loading="lazy" alt="" width="115" height="35">
								</a>
							{% endif %}
							{% if store.apps.android_package_name %}
								<a href="https://play.google.com/store/apps/details?id={{ store.apps.android_package_name }}" target="_blank">
									<img src="{{ asset_url ~ 'google-play.svg' }}" loading="lazy" alt="" width="115" height="35">
								</a>
							{% endif %}
						</div>
					</div>
				{% endif %}
				<div class="icons">
					<div class="logistics-pay-icons d-flex flex-wrap justify-content-center">
						{% for shipping_method in store.shipping_methods %}
							<a href="/shipping-and-payment">
								<img src="{{ imageUrl(shipping_method.icon,{ h: 80, q: 100 }) }}" loading="lazy" alt="" height="21">
							</a>
						{% endfor %}


						{% for payment_method in store.payment_methods %}
							<a href="/shipping-and-payment">
								<img src="{{ imageUrl(payment_method.icon,{ h: 80, q: 100 }) }}" loading="lazy" alt="" height="21">
							</a>
						{% endfor %}

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="footer-copyrights-vat-certificate">
	<div class="container">
		<div class="d-flex flex-column-reverse flex-lg-row flex-wrap align-items-center justify-content-between footer-store-section-bars" style="border-bottom: 0px;">
			<div class="d-flex justify-content-center align-items-center">
				<span class="text-center footer-copyrights">{{ store.copyrights | raw}}</span>
			</div>
			<div class="vat-crn-sections py-4 d-flex flex-row flex-wrap justify-content-end align-items-center">
				{% if store.vat_settings.is_certificate_visible %}
					<div class="vat-icon">
						<a {% if store.vat_settings.tax_registration_certificate %} href="{{ store.vat_settings.tax_registration_certificate }}" target="_blank" {% endif %}>
							<img src="{{ asset_url ~ 'vat-certificate.png' }}" loading="lazy" alt="" width="auto" height="40">
						</a>
					</div>
				{% endif %}

				{% if store.social_media.items.business_center %}
					<div class="maroof-icon" style="text-align: center;">
						<img src="{{ asset_url ~ 'business_center.png' }}" loading="lazy" alt="" width="auto" height="30">
						<div>{{ store.social_media.items.business_center }}</div>
					</div>
				{% endif %}

				{% if store.vat_settings.vat_number %}
					<div class="vat-number">
						<span>{{ locals.footer_vat_number }}</span>
						<span>{{ store.vat_settings.vat_number }}</span>
					</div>
				{% endif %}

				{% if store.commercial_registration_number %}
					<div class="maroof-icon">
						<span>{{ locals.footer_commercial_registration_number }}</span>
						<span>{{ store.commercial_registration_number }}</span>
					</div>
				{% endif %}
			</div>
		</div>

	</div>
</div>

<style>
	.newsletter_section {
		background-color: {{about_settings.newsletter_color_section}}
		;
	}

	.newsletter_section_inner {
		gap: 20px;
	}

	.newsletter_section_inner .div_email {
		border-radius: 50%;
		width: 65px;
		height: 65px;
		background: #FFFFFF80;
		color: #750E21;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 25px;
	}

	.newsletter_section_content_title,
	.app_section_content_title {
		font-size: clamp(14px, 2vw + 1px, 18px);
		color: {{about_settings.newsletter_text_color}}
		;
	}

	.newsletter_section_content_desc,
	.subscribe_sec_label {
		font-size: 14px;
		color: {{about_settings.newsletter_text_color}}
		;
	}

	.subscribe_sec .form {
		gap: 16px;
	}

	.subscribe_sec .form .subscribe_sec_input {
		border-radius: 5px !important;
		padding: 8px 20px;
	}

	.subscribe_sec .form .subscribe_sec_button {
		border: none;
		outline: none;
		border-radius: 4px;
		padding: 8px 25px;
		font-size: 13px;
		color: {{about_settings.newsletter_text_color}}
		;
		background: {{about_settings.newsletter_buttonColor}}
		;
	}

	.app_section_buttons {
		gap: 20px;
	}

	.app_section_buttons .app_section_buttons_button {
		border-radius: 5px;
		background: #FFFFFF;
	}

	.app_section_buttons .app_section_buttons_button img {
		width: 115px;
		height: 45px;
		object-fit: cover;
		border-radius: 4px;
	}

	.footer-about-us-links-div h2 {
		font-size: clamp(14px, 2vw + 1px, 18px);
		font-weight: 600;
		color: #333333;
	}

	.footer-about-us-links-div p {
		font-size: clamp(12px, 1.5vw + 2px, 13px);
		font-weight: 300;
	}

	.footer-about-us-links-div p a {
		transition: color 0.2s ease-in-out;
	}

	.footer-about-us-links-div p a:hover {
		color: #750E21 !important;
	}

	.social-icons span {
		height: 40px;
		width: 40px;
		font-size: 22px;
		padding: 5px;
		color: var(--footer-text-color-primary-bg, var(--text-color-primary-bg));
		border: 2px solid var(--footer-text-color-primary-bg, var(--text-color-primary-bg));
		border-radius: 50%;
		transition: border-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}

	.social-icons span:hover {
		border-color: #E3651D;
		color: #E3651D;
	}

	/* Media Queries */
	@media(max-width: 600px) {
		.newsletter_section_inner .div_email {
			width: 60px;
			height: 40px;
			font-size: 20px;
		}
	}

	@media(min-width: 601px) and(max-width: 1024px) {
		.newsletter_section_inner .div_email {
			width: 65px;
			height: 45px;
			font-size: 22px;
		}
	}

	@media(min-width: 1025px) {
		.newsletter_section_inner .div_email {
			width: 60px;
			height: 52px;
			font-size: 24px;
		}
	}
</style>
