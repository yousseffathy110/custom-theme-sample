<div class="newsletter_section pt-5 pb-5 d-flex align-items-center justify-content-center">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-4 col-sm-12 mb-4">
				<div class="newsletter_section_inner d-flex justify-content-center">
					<div class="div_email">
						<i class="fa-regular fa-envelope"></i>
					</div>
					<div class="newsletter_section_content">
						<h5 class="newsletter_section_content_title">
							{{ about_settings.newsletter_title }}
						</h5>
						<p class="newsletter_section_content_desc">
							{{ about_settings.newsletter_des }}
						</p>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-sm-12 mb-4">
				<div class="subscribe_sec">
					<p class="subscribe_sec_label">
						{{ about_settings.newsletter_label }}
					</p>
					<form class="form mt-4 d-flex align-items-center justify-content-center" action="{{ about_settings.newsletter_subscribe_link }}" method="post">
						<input type="email" class="form-control  subscribe_sec_input " placeholder="{{ about_settings.newsletter_placeholder }}">
						<button class="subscribe_sec_button " type="submit">
							{{ about_settings.newsletter_buttonText }}
						</button>
					</form>
				</div>
			</div>
			<div class="col-lg-3 col-sm-12 mb-4">
				<div class="app_section">
					<h5 class="app_section_content_title">
						{{ about_settings.newsletter_phoneapps }}
					</h5>
					<div class="app_section_buttons mt-4 d-flex align-items-center ">
						{% if about_settings.newsletter_app_store_link and  about_settings.newsletter_app_store  %}
							<a href="{{ about_settings.newsletter_app_store_link }}" class="app_section_buttons_button">
								<img src="{{ about_settings.newsletter_app_store }}" alt="">
							</a>
						{% endif %}

						{% if  about_settings.newsletter_play_store_link and  about_settings.newsletter_play_store %}
							<a href="{{ about_settings.newsletter_play_store_link }}" class="app_section_buttons_button">
								<img src="{{ about_settings.newsletter_play_store }}" alt="">

							</a>
						{% endif %}

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

